using namespace std;
#include <iostream>
#include <iomanip> 
#include<cmath>
int main()
{
 
        
        ios_base::sync_with_stdio(false);
        cin.tie(NULL);
 
        int a, b;
        cin >> a >> b;
 
        if (a == 0 && b == 0) {
            cout << "NO\n";
        }
        else if (a > 0 && b == 0) {
            if (a == 1) {
                cout << "YES\n";
            }
            else {
                cout << "NO\n";
            }
        }
        else if (a == 0 && b > 0) {
            if (b == 1) {
                cout << "YES\n";
            }
            else {
                cout << "NO\n";
            }
        }
        else { 
            if (abs(a - b) <= 1) {
                cout << "YES\n";
            }
            else {
                cout << "NO\n";
            }
        }
 
        return 0;
    }
       
